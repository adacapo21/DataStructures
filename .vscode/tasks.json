{
   "version": "2.0.0",
 
    "osx": {
        "command": "clang++",
        "args": [
            "-std=c++14",
            "-Wall",
            "-fsanitize=address", // ANas : Address Sanitizer
            "-g", 
            //"-fno-omit-frame-pointer", // nice stack traces
            "-fno-optimize-sibling-calls", //perfect stack traces , use it with "-01"
            //"-01", // for optimization of the code
            //"helloworld.cpp",
            "Array2.cpp",
            "-v"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        }
        },
        "problemMatchers": [
            "$gcc"
        ]
    }
